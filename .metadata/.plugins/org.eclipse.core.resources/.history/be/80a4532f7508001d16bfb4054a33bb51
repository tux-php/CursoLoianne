package com.fernando.cursojava.aula27;

public class Lampada {
	String nome;
	boolean wifi;
	String cor;	
	int potencia;
	boolean ligada;
	
	void ligar() {
		ligada = true;
	}
	
	void desligar() {
		ligada = false;
	}
	
	void mostrarEstado() {
		if (ligada) {
			System.out.println("L칙mpada est치 ligada.");
		} else {
			System.out.println("L칙mpada est치 desligada.");
		}
	}

}
